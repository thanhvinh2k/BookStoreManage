<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HoaDonChiTietFragment">

    <TextView
        android:text="Mã Hóa Đơn"
        android:textStyle="bold"
        android:textColor="#0657F7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edHDCT_MaHoaDon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Mã Thiết bị"
        android:textColor="#0657F7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spnHDCT_MaThietBi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Số lượng mua"
        android:textColor="#0657F7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edHDCT_SoLuongMua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/btHDCT_ThemHDCT"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"/>
        <Button
            android:id="@+id/btThanhToan"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tvThanhTienHDCT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0657F7"
        android:text="Thành Tiền"
        android:textStyle="bold"
        android:textSize="36px"/>
    <ListView
        android:id="@+id/lvHDCT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

    </ListView>

</LinearLayout>