<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThongKeFragment">

    <ImageView
        android:src="@drawable/doanhthu1"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textColor="#ff00"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Thống kê doanh thu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvThongKeNgay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="Hôm Nay:"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#0657F7"/>
    <TextView
        android:id="@+id/tvThongKeThang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="Tháng này:"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#0657F7"/>
    <TextView
        android:id="@+id/tvThongKeNam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="Năm nay:"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#0657F7"/>

</LinearLayout>